---
import { iconPaths, type IconType } from './ui';

interface Props {
	type: IconType;
	class?: string;
}

const { type, class: className = 'h-5 w-5' } = Astro.props;
---

<svg
	class={className}
	xmlns="http://www.w3.org/2000/svg"
	viewBox="0 0 20 20"
	fill="currentColor"
>
	<path fill-rule="evenodd" d={iconPaths[type]} clip-rule="evenodd" />
</svg>
